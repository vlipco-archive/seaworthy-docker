#!/bin/bash
set -eo pipefail

echo "-----------------"

error() {
    echo >&2 " !! $* Aborting."
    exit 1
}

source_dir="${WWW_DIR:build}"

if ! test -d "$source_dir"; then
	error "The directory $source_dir doesn't exist."
fi

echo "Copying static files from ${source_dir}"
cp -Rf /tmp/src/${source_dir}/* /app

echo "Build complete. Wait for docker to commit the changes."
